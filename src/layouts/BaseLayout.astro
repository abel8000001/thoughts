---
import "../styles/global.css";

// Determine active tab from the current URL pathname.
const siteBase = '/thoughts';
const pathname = Astro.url?.pathname ?? '';
const activeMusic = pathname.startsWith(`${siteBase}/music`);
const activeMovies = pathname.startsWith(`${siteBase}/movies`);
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/x-icon" href="/thoughts/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
        <link
            href="https://fonts.googleapis.com/css2?family=Play:wght@700&family=Raleway:ital,wght@0,400;0,700;1,400&display=swap"
            rel="stylesheet"
        />
        <title>abel's thoughts</title>
    </head>
    <body>
        <header id="header">
            <a href="/thoughts" id="title"><h1>abel's thoughts</h1></a>
        </header>
        <main>
            <div id="tabs">
                <a href="/thoughts/music/" class={activeMusic ? 'tab-active' : 'tab-unactive'}>music</a>
                <a href="/thoughts/movies/" class={activeMovies ? 'tab-active' : 'tab-unactive'}>movies</a>
            </div>
            <div id="window">
                <div id="window-content">
                    <slot />
                </div>
            </div>
        </main>
    </body>
</html>
